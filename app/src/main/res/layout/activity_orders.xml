<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewModel.OrdersActivity">

    <LinearLayout
        android:id="@+id/PanelContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="194dp">

        <FrameLayout
            android:id="@+id/PanelHead"
            android:layout_width="match_parent"
            android:layout_height="74dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBackToTablesView"
                    android:layout_width="wrap_content"
                    android:layout_height="71dp"
                    android:onClick="btnBackToTablesView_Click"
                    android:text="AtrÃ¡s" />

                <TextView
                    android:id="@+id/TextViewEmployee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="TextView" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/PanelViewInfo"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:id="@+id/TextViewInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Seleccione o realice un nuevo pedido" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/PanelData"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/ListViewOrders"
                    android:layout_width="match_parent"
                    android:layout_height="316dp" />

                <Button
                    android:id="@+id/BtnNewOrder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nuevo Pedido" />
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>