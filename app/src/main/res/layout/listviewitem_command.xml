<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <TextView
        android:id="@+id/TextViewCommandDescription"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewCommandName"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ImageViewCommand"
        android:layout_toRightOf="@+id/ImageViewCommand"
        android:text="DescripciÃ³n" />

    <TextView
        android:id="@+id/TextViewCommandName"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/ImageViewCommand"
        android:layout_toRightOf="@+id/ImageViewCommand"
        android:text="Nombre"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="21sp" />

    <ImageView
        android:id="@+id/ImageViewCommand"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextViewCommandDescription"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="-2dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:maxWidth="74dp"
        android:maxHeight="35dp" />

    <Button
        android:id="@+id/BtnChangeCommandToServed"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/TextViewCommandName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="313dp"
        android:layout_marginLeft="313dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/asterisk"
        android:onClick="BtnChangeCommandToServed_Click" />

</RelativeLayout>