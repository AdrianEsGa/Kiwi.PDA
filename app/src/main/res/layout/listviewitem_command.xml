<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <ImageView
        android:id="@+id/ImageViewCommand"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignBottom="@+id/TextViewCommandDescription"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="-13dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:maxWidth="74dp"
        android:maxHeight="35dp" />

    <LinearLayout
        android:layout_width="233dp"
        android:layout_height="61dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextViewCommandName"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/ImageViewCommand"
            android:layout_toRightOf="@+id/ImageViewCommand"
            android:text="Nombre"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/TextViewCommandDescription"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextViewCommandName"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ImageViewCommand"
            android:layout_toRightOf="@+id/ImageViewCommand"
            android:text="DescripciÃ³n" />

    </LinearLayout>

    <Button
        android:id="@+id/BtnChangeCommandToServed"
        android:layout_width="28dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/asterisk"
        android:onClick="BtnChangeCommandToServed_Click" />

</LinearLayout>