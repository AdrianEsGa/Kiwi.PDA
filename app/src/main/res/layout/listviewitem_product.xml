<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
>

    <ImageView
        android:id="@+id/ImageViewProduct"
        android:layout_width="64dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="5dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:maxWidth="74dp"
        android:maxHeight="35dp" />

    <TextView
        android:id="@+id/TextViewProductName"
        android:layout_width="159dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/ImageViewProduct"
        android:layout_toRightOf="@+id/ImageViewProduct"
        android:gravity="center|left"
        android:text="Nombre"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnDecrement"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextViewProductName"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/TextViewProductName"
        android:layout_toRightOf="@+id/TextViewProductName"
        android:focusable="false"
        android:onClick="btnDecrement_Click"
        android:text="-" />

    <TextView
        android:id="@+id/TextViewQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnDecrement"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="14dp"
        android:layout_toEndOf="@+id/btnDecrement"
        android:layout_toRightOf="@+id/btnDecrement"
        android:text="0" />

    <Button
        android:id="@+id/btnIncrement"
        android:layout_width="46dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/btnDecrement"
        android:layout_alignBottom="@+id/TextViewProductName"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/TextViewQuantity"
        android:layout_toRightOf="@+id/TextViewQuantity"
        android:focusable="false"
        android:onClick="btnIncrement_Click"
        android:text="+" />

</LinearLayout>