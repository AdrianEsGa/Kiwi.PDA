<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewModel.CommandsActivity">

    <LinearLayout
        android:id="@+id/PanelContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="194dp">

        <TextView
            android:id="@+id/TextViewEmployee"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="center"
            android:text="TextView"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/ListViewCommands"
            android:layout_width="match_parent"
            android:layout_height="426dp">

        </ListView>

        <Button
            android:id="@+id/BtnNewCommand"
            android:layout_width="match_parent"
            android:layout_height="272dp"
            android:background="@color/colorPrimary"
            android:gravity="center|top"
            android:onClick="btnNewCommandView_Click"
            android:text="Nueva Comanda"
            android:textColor="@color/colorBackgroud" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>